<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.raldes.bnc">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Mvvmboilerplate"
        android:name="com.raldes.bnc.MovieApplication">
        <activity
            android:name="com.raldes.bnc.ui.activity.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Mvvmboilerplate.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.activity.MovieActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Mvvmboilerplate.NoActionBar"/>

        <activity
            android:name=".ui.activity.MovieDetailActivity"
            android:screenOrientation="portrait"/>

    </application>

</manifest>